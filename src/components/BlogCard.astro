---
// BlogCard 컴포넌트
export interface Props {
  title: string;
  pubDate: string;
  tags: string[];
  category: string;
  image?: string;
  description: string;
  slug: string;
}

const { title, pubDate, tags, category, image, description, slug } = Astro.props;
const fallbackImage = '/default-image.png';
---
<article class="blog-card bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden" data-tags={JSON.stringify(tags)} data-category={category}>
  <a href={`/blog/${slug}`} class="block">
    {image
      ? <img src={image} alt={title} class="w-full h-48 object-cover object-top">
      : <img src={fallbackImage} alt="기본 이미지" class="w-full h-48 object-cover object-top">
    }
    <div class="p-6">
      <div class="flex items-center gap-2 mb-3">
        <span class="px-2 py-1 bg-primary text-white text-xs rounded font-medium">{category}</span>
        {tags.map(tag => <span class="px-2 py-1 bg-gray-100 text-xs rounded text-secondary">{tag}</span>)}
      </div>
      <h3 class="text-lg font-semibold mb-2 text-primary">{title}</h3>
      <p class="text-secondary text-sm mb-4 line-clamp-3">{description}</p>
      <div class="flex items-center justify-between text-xs text-secondary">
        <span>{pubDate}</span>
      </div>
    </div>
  </a>
</article> 